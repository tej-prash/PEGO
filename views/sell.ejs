<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>
    <% include partials/menu %>
    <center>

        <div id="content-wrapper">

            <div class="container-fluid">

                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" style="font-size: 30px;color:black;">Sell Items</li>
                </ol>

                <form class="form-horizontal" action="/sell" method="post" enctype="multipart/form-data">

                    <div class="input-group mb-3 col-sm-8">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Set A Price </span>
                        </div>
                        <input type="number" step="any" class="form-control" name="cost" id="long" placeholder="Rs"
                            aria-label="long" aria-describedby="basic-addon1" required>
                    </div>
                    <br />
                    <br />
                    <div class="input-group mb-3 col-sm-8">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Category </span>
                        </div>
                        <select name="category" class="form-control" required>
                            <% for(var i=0; i < data.length; i++) { %>
                            <option value="<%= data[i].name %>"><%= data[i].name %></option>
                            <% } %>

                        </select>
                    </div>
                    <br />
                    <br />
                    <div class="input-group mb-3 col-sm-8">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Description</span>
                        </div>
                        <textarea class="form-control" name="description" placeholder="Enter Description" aria-label="With textarea"></textarea>
                    </div>
                    <br />
                    <br />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Choose File</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputGroupFile01"
                                aria-describedby="inputGroupFileAddon01" name="filetoupload">
                            <label class="custom-file-label" for="inputGroupFile01"></label>
                        </div>
                    </div>

                    <br />
                    <br />

                    <div class="form-group">
                        <div class="col-sm-offset-1 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </center>

</body>
<% include partials/script %>

</html>